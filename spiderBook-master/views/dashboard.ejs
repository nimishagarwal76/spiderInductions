      // }
        fetch('https://www.googleapis.com/books/v1/volumes?q={india}')
        .then((res)=>res.json())
        .then((data)=>{
          data.items.forEach(function(result){
          document.getElementById('display').innerHTML+=`<div id="book"><div id="head">
          <h3>${result.volumeInfo.title}</h3>
          <img style="float:right" src=${result.volumeInfo.imageLinks.smallThumbnail}/><br>
          Pages: ${result.volumeInfo.pageCount}<br>
          Rating: ${result.volumeInfo.averageRating}<br>
          Author: ${result.volumeInfo.authors}<div><br>
          <div id="description">
          ${result.volumeInfo.description}<hr>
          </div></div>`;
        });
          console.log(data.items[0].volumeInfo);
        });
